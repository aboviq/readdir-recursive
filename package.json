{
	"name": "@aboviq/readdir-recursive",
	"version": "0.0.0-development",
	"description": "Customizeable async recursive fs.readdir with no dependencies and sane defaults",
	"main": "src/index.js",
	"files": [
		"src/index.js"
	],
	"scripts": {
		"test": "xo && jest --coverage",
		"semantic-release": "semantic-release"
	},
	"engines": {
		"node": ">= 8.10.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/aboviq/readdir-recursive.git"
	},
	"keywords": [
		"readdir",
		"recursive",
		"filter",
		"async",
		"fs",
		"transform"
	],
	"author": "Aboviq AB <joakim@aboviq.com> (https://www.aboviq.com/)",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/aboviq/readdir-recursive/issues"
	},
	"homepage": "https://github.com/aboviq/readdir-recursive#readme",
	"devDependencies": {
		"@commitlint/cli": "^8.2.0",
		"@commitlint/config-angular": "^8.2.0",
		"@commitlint/travis-cli": "^8.2.0",
		"eslint-plugin-jest": "^23.1.1",
		"husky": "^3.1.0",
		"jest": "^24.9.0",
		"prettier": "^1.19.1",
		"semantic-release": "^15.13.31",
		"xo": "^0.53.1"
	},
	"xo": {
		"parserOptions": {
			"sourceType": "script"
		},
		"prettier": true,
		"plugins": [
			"jest"
		],
		"extends": [
			"plugin:jest/recommended"
		],
		"rules": {
			"strict": [
				"error",
				"safe"
			],
			"jest/valid-expect": 0,
			"jest/consistent-test-it": [
				"error"
			],
			"jest/valid-describe": [
				"error"
			]
		}
	},
	"publishConfig": {
		"access": "public"
	}
}
